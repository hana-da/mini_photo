%header
  %h1 ログイン

- if @form.errors.any?
  %aside#error_explanation
    %ul
      - @form.errors.full_messages.each do |message|
        %li= message

%main
  = form_with model: @form, url: user_session_path, local: true do |f|
    .login-form__username
      = f.label :username
      = f.text_field :username
    .login-form__password
      = f.label :password
      = f.password_field :password
    .login-form__action
      = f.submit 'ログインする'
